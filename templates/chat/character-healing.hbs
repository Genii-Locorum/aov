<form class="aov">
  <div class="">
    <ol class="op-list">
      <div class="dice-roll">
        <li class='actor-roll'>
          <img class="open-actor" src="{{particImg}}" height="53" width="53" title="{{particName}}" />
          <div class="roll-details">
            <div class="header">
              <div class='name'>
                <span class="tag">{{particName}}</span>
              </div>
            </div>
          </div>
        </li>
        </div>
        {{#each results as |result key|}}
          <div>
            <span class="bold truncate">{{result.locName}}: {{result.damage}} {{localize 'AOV.damageAbbr'}} - {{result.healed}} {{localize 'AOV.healingAbbr'}} = {{result.newDam}}
              {{#if (eq result.newDam 0)}} ({{localize 'AOV.woundFullyHealed'}}) {{/if}}
            </span>
          </div>
        {{/each}}
    </ol>
  </div>
</form>