<form class="aov">
  <div class="">
    <ol class="op-list">
      <div class="dice-roll">
        <li class='actor-roll'>
          <img class="open-actor" src="{{particImg}}" height="53" width="53" title="{{particName}}" />
          <div class="roll-details">
            <div class="header">
              <div class='name'>
                <span class="tag">{{particName}}</span>
              </div>
            </div>
          </div>
        </li>
        </div>
        {{#each results as |result key|}}
          <div>
               {{#if (eq success 4)}}
                  <span class="pending">{{label}}: {{rollResult}} (+{{incVal}} {{localize 'AOV.devPointsAbbr'}}) <i class="result-success fas fa-axe-battle"></i><i class="result-success fas fa-axe-battle"></i><i class="result-success fas fa-axe-battle"></i>
                {{/if}}

                {{#if (eq success 3)}}
                  <span class="pending">{{label}}: {{rollResult}} (+{{incVal}} {{localize 'AOV.devPointsAbbr'}}) <i class="result-success fas fa-axe-battle"></i><i class="result-success fas fa-axe-battle"></i>
                {{/if}}

                {{#if (eq success 2)}}
                  <span class="pending">{{label}}: {{rollResult}} (+{{incVal}} {{localize 'AOV.devPointsAbbr'}}) <i class="result-success fas fa-axe-battle"></i>
                {{/if}}

                {{#if (eq success 1)}}
                  <span class="pending">{{label}}: {{rollResult}} <i class="result-fail fas fa-skull"></i>
                {{/if}}

                {{#if (eq success 0)}}
                  <span class="pending">{{label}}: {{rollResult}} <i class=" result-fail fas fa-skull"></i><i class="result-fail fas fa-skull"></i>
                {{/if}}
            </span>
          </div>
        {{/each}}
    </ol>
  </div>
</form>