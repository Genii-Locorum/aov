{{! Description Tab }}
<section class='item tab description {{tab.cssClass}}' data-group='primary' data-tab='description'>
  <div>{{localize 'AOV.description'}}</div>

  {{! Editor for description}}
  <div class="item-notes">
    {{#if editable}}
      <prose-mirror name="system.description" data-document-u-u-i-d="{{item.uuid}}" value="{{system.description}}"
        collaborate="true" toggled="true">
        {{{enrichedDescription}}}
      </prose-mirror>
    {{else}}
      {{{enrichedDescription}}}
    {{/if}}
  </div>
</section>