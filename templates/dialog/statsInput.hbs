<section class="aov stats-input" id="stats-input-form">
  <br>
  <div class="flexcol">
    <div class='bold statsCreate header counter'>
      <label class="skill-opt-label" style="grid-column: 1/3;">{{ localize 'AOV.selectionsMade' }}:</label>
      <span class="centre count">70</span>
      <span class="centre">/</span>
      <span class="centre">{{pointsMax}}</span>
    </div>
    <br>

  <div class="statsCreate">
    {{#each stats as |stat key|}}
      <div class="bold stat-name">{{stat.label}}</div>
      <div class="bold stat-name">{{stat.min}}-{{stat.max}}</div>
      <div class="centre"><a class="large-icon darkred up rollable" data-set="{{key}}" data-change=1> <i class="fas fa-circle-up"></i> </a></div>
      <div class="centre item-{{key}}">{{stat.value}}</div>
      <div class="centre"><a class="large-icon darkred down rollable" data-set="{{key}}" data-change=-1> <i class="fas fa-circle-down"></i> </a></div>
    {{/each}}
  </div>
  <br>

</section>