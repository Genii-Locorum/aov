<section class='character tab runes {{tab.cssClass}}' data-group='primary' data-tab='runes'>
  {{!--Runes List--}}
  <ol class='gear-list'>
    <li class='item gear-header primBackCol runes-grid'>
      <div class='item-image'></div>
      <div class='left'>{{localize 'AOV.name'}}</div>
      <div class='centre'>{{localize 'AOV.areas'}}</div>
      <div class='centre'></div>
    </li>
    {{#each runes as |item id|}}
    <li class='item runes-grid' data-item-id='{{item._id}}' data-drag='true' data-document-class='Item'>
      <div class='new-row item-image' title='{{item.name}}'><a><img src='{{item.img}}' width='40' height='40' /> </a></div>
      <div class="gear-name left rollable" title='{{localize "AOV.viewDoc" type=(localize "TYPES.Item.rune")}}'
        data-action='viewDoc'>{{item.name}}</div>
      <div class="area-of-power"> {{item.system.areas}}</div>
      {{#unless ../isLocked}}
      <div class='gear-controls centre'>
        <a class='item-delete centre' title='{{localize "AOV.deleteDoc" type=(localize "TYPES.Item.rune")}}'
          data-action="deleteDoc">
          <i class='fas fa-trash'></i>
        </a>
      </div>
      {{/unless}}
    </li>
    {{/each}}

  </ol>
</section>