<section class='actor tab gmTab {{tab.cssClass}}' data-group='primary' data-tab='gmTab'>
  <div>{{localize 'AOV.gmNotes'}}</div>

  {{! Editor for description}}
  <div class="item-notes">
    <prose-mirror name="system.gmNotes" data-document-u-u-i-d="{{actor.uuid}}" value="{{system.gmNotes}}"
      collaborate="true" toggled="true">
      {{{enrichedGMNotes}}}
    </prose-mirror>
  </div>
  <br>
  {{! Bonuses etc}}

  <div>{{localize 'AOV.bonuses'}}</div>
  <div class="statBonus">
    <div class="gear-name left new-row">{{localize 'AOV.maxHPBonus'}}</div>
    <div class='gear-name centre'>
      <input class="stat-input" name='system.hp.bonus' type='text' value='{{system.hp.bonus}}' data-dtype="Number" />
    </div>
    <div class="gear-name left new-row">{{localize 'AOV.maxMPBonus'}}</div>
    <div class='gear-name centre'>
      <input class="stat-input" name='system.mp.bonus' type='text' value='{{system.mp.bonus}}' data-dtype="Number" />
    </div>
    <div class="gear-name left new-row">{{localize 'AOV.healRateBonus'}}</div>
    <div class='gear-name centre'>
      <input class="stat-input" name='system.hrBonus' type='text' value='{{system.hrBonus}}' data-dtype="Number" />
    </div>

  </div>
</section>